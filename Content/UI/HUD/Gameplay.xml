<View id="gameplay-hud">
    <List
        id="stats"
        direction="row"
        width="100vh"
        height="10vh"
    >
        <List
            id="fps"
            direction="row"
            width="8vh"
            height="3vh"
        >
            <Text>FPS:</Text>
            <Text onTick="onFPSCounterTick">0</Text>
        </List>
        <List
            id="frametime"
            direction="row"
            width="15vh"
            height="3vh"
        >
            <Text>Frametime:</Text>
            <Text onTick="onFrametimeTick">0</Text>
        </List>
    </List>
</View>